{
    "manifest_version": 2,
    "name": "CodeChefAddOn for Firefox",
    "version": "1.0",
    "description": "An AddOn to combine a custom template file and scraped problem statement into a single submission file for easy coding.",
    "icons": {
        "48": "icons/codechef-48.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.codechef.com/*"],
            "js": ["codechef_sublime.js"]
        }
    ],
    "browser_action": {
        "browser_style": true,
        
        "default_popup": "popup/choose_page.html",
        "default_icon" : {
            "48":"icons/codechef-48.png"
        }
    },
    "options_ui": {
        "page":"settings/options.html",
        "open_in_tab":  true,
        "browser_style": true
    },
    "permissions": [
        "tabs",
        "clipboardWrite",
        "clipboardRead",
        "storage",
        "downloads"
        
    ],
    "browser_specific_settings": {
        "gecko": {
            "id":"codechefaddon@example.com"
        }
    }


    
}